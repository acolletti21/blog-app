<h1>Create A New Category</h1>
<p><i>Examples: DIY, Sports, Funny</i></p>

<% @category.errors.full_messages.each do |error| %> 
  <h2><%=error%></h2>
<%end%>

<%= form_tag '/categories', method: :post do  %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <%= submit_tag "Create" %>
<% end %>
