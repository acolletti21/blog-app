<h1>Categorize Post</h1>
  
  <%= form_tag "/post_categories/#{@post.id}", method: :post do %>
    
    <div>
      <%= label_tag :category %>
      <%= collection_select :category, :category_id, Category.all, :id, :name, selected: @post.category_id %>
      <%= hidden_field_tag :post_id, @post.id %>
    </div>

  <% submit_tag "Add"%>

  <% end %>